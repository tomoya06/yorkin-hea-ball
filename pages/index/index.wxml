<i-tabs current="{{ currentTab }}" bindchange="changeTab" color="#D61D22">
    <i-tab key="tab1" title="League 1"></i-tab>
    <i-tab key="tab2" title="League 2"></i-tab>
    <i-tab key="tab3" title="League 3"></i-tab>
</i-tabs>
<i-cell-group>
    <i-card 
        wx:for="{{news}}"
        wx:key="{{index}}"
        top="{{index==0}}"
        title="{{item.title}}"
        thumb="{{item.cover}}"
    ></i-card>
</i-cell-group>