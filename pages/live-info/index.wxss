.live-header {
    font-size: 22px;
    margin: 22px 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.live-board {
    display: flex;
    margin: 10px 6px;
}

.live-column {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.live-row {
    height: 60px;
    color: #fff;
    background: #000;
    border: 1rpx solid #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.live-row-header {
    writing-mode: vertical-lr;
    transform: rotate(180deg);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 12px;
}

.live-content {
    margin: 20px 6px;
}