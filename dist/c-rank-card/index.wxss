.i-card {
    font-size: 14px;
    overflow: hidden;
    position: relative;
}

.i-card-full {
    margin: 6px 0;
    border-left: none;
    border-right: none;
    border-radius: 0
}

.i-card-header {
    display: flex;
    padding: 6px 16px;
    align-items: center
}

.i-card-header-content {
    flex: 1;
    text-align: left
}

.i-card-header-thumb {
    display: inline-block;
    width: 16px;
    height: 16px;
    position: relative;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    background-size: cover;
    vertical-align: middle;
    margin: 0 10px 0 0 ;
}

.i-card-header-title {
    flex: 2;
    font-size: 14px;
    color: rgb(228, 228, 228);
}

.i-card-header-extra {
    flex: 1;
    text-align: right;
    font-size: 14px;
    color: #80848f
}