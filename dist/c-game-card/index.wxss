.i-card {
    font-size: 14px;
    overflow: hidden;
    border-radius: 20px;
    background-color: #CCCCCC;
    margin: 6px 16px;
    padding: 14px 16px;
}

.i-card-header {
    display: flex;
    align-items: center
}

.i-card-header-status {
    display: block;
    width: 46px;
    height: 46px;
    line-height: 46px;
    border-radius: 50%;
    background: #000000;
    color: #fff;
    text-align: center;
    overflow: hidden;
}

.i-card-header-teams {
    flex: 1;
    align-items: center;
    display: flex;
}

.i-card-header-team {
    flex: 1;
    text-align: center;
}

.team-divider {
    height: 36px;
    width: 2px;
    background-color: #909090;
}

.i-card-header-extra {
    align-self: flex-start;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-align: right;
    width: 30px;
}

.i-card-header-more {
    width: 20px;
    height: 6px;
}