<view class="i-class i-card">
    <view class="i-class i-card-header">
        <view class="i-card-header-status">{{status}}</view>
        <view class="i-card-header-teams">
            <text class="i-card-header-team">{{teams[0].team}}</text>
            <view class="team-divider"></view>
            <text class="i-card-header-team">{{teams[1].team}}</text>
        </view>
        <view class="i-card-header-extra">
            <image mode="aspectFit" class="i-card-header-more" src="https://www.easyicon.net/api/resizeApi.php?id=1170510&size=16"></image>
        </view>
    </view>
</view>
